<%= form_for [:admin, exercise] do |f| %>
  <%= render 'application/messages', errors: exercise.errors %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", :required => true  %>
  </div>

  <div class="form-group">
    <%= f.label :text %>
    <%= f.text_area :text, class: "form-control", rows: 4 %>
  </div>

  <%= f.submit I18n.t('actions.save'), class: "btn btn-success" %>
<% end %>
