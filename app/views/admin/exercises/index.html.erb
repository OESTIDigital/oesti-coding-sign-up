<%= render 'page_header' %>
<%= render 'application/messages' %>

<table class="table">
  <thead>
    <tr>
      <th><%= I18n.t('helpers.label.exercise.title') %></th>
      <th class="actions"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.title %></td>
        <td>
          <div class="btn-group">
            <%= link_to I18n.t('actions.show'), [:admin, exercise], class: 'btn btn-small btn-default' %>
            <%= link_to I18n.t('actions.edit'), edit_admin_exercise_path(exercise), class: 'btn btn-small btn-default' %>
            <%= link_to I18n.t('actions.destroy'), [:admin, exercise], method: :delete, class: 'btn btn-small btn-danger', data: { confirm: I18n.t('messages.are_you_sure') } %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>