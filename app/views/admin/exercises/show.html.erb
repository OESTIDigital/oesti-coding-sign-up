<%= render 'page_header' %>
<%= render 'application/messages' %>

<%= form_for [:admin, @exercise] do |f| %>
	<div class="form-group">
    <%= f.label :title %>
	  <p class="form-control-static"><%= @exercise.title %></p>
	</div>

	<div class="form-group">
    <%= f.label :text %>
	  <%= simple_format @exercise.text, class: 'form-control-static' %>
	</div>
<% end %>
