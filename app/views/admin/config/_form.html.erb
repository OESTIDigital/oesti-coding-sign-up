<%= form_for [:admin, config], :url => admin_config_path do |f| %>
  <%= render 'application/messages', errors: config.errors %>

  <div class="form-group">
    <%= f.label :start_time %>
    <%= f.datetime_local_field :start_time, class: "form-control", :required => true %>
  </div>

  <div class="form-group">
    <%= f.label :end_time %>
    <%= f.datetime_local_field :end_time, class: "form-control", :required => true %>
  </div>

  <%= f.submit I18n.t('actions.save'), class: "btn btn-success" %>
<% end %>
